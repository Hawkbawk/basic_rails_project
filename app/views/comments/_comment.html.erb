<li>
    <strong> Commenter: <%= comment.commenter %> </strong>

    <p style='margin-left:3em'> 
        <%= comment.body%>
    </p>

    <p>
        <%= link_to 'Delete Comment', [comment.article, comment],
            method: :delete,
            data: { 
                confirm: 'Are you sure you want to delete this comment by \''.concat(comment.commenter).concat('\'?')
                }%>
    </p>
</li>
