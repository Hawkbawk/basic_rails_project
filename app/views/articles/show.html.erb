<p>
    <strong>Title:</strong>
    <%= @article.title %>
</p>

<p>
    <strong>Text:</strong>
    <%= @article.text %>
</p>

<h2>Comments </h2>
<% if @article.comments.count == 0 %>
    <b>No comments yet!</b>
<% end %>
<ul>
    <% @article.comments.each do |comment| %>
        <li>
            <strong> Commenter: <%= comment.commenter %> </strong>
            <p style='margin-left:3em'> <%= comment.body%> </p>
        </li>
<% end %>
</ul>

<h2> Add a comment: </h2>
<%= form_with model: [ @article, @article.comments.build], local: true do |form| %>
    <p>
        <%= form.label :commenter %>
        <%= form.text_field :commenter%>
    </p>
    <p>
        <%= form.label :body%><br>
        <%= form.text_area :body%>
    </p>
    <p>
    <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Create Another', new_article_path %>
<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>